{
  "name": "ergometer-js",
  "description": "Java script ergometer driver for concept 2 performance monitor with BLE and USB. (The PM5) Works on all major platforms using cordova and node/electron",
  "version": "2.2.0",
  "engines": {
    "node": ">=5.5.0"
  },
  "main": "./api/lib/ergometer.js",
  "module": "./api/lib/ergometer.js",
  "types": "./api/lib/ergometer.d.ts",
  "devDependencies": {
    "csstype": "^3.1.3",
    "typescript": "^5"
  },
  "license": "Apache-2.0",
  "keywords": [
    "PhoneGap",
    "cordova",
    "ergometer",
    "driver",
    "concept 2",
    "BLE",
    "USB",
    "HID",
    "PM3",
    "PM4",
    "PM5",
    "WebHid"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p api",
    "clean": "rm -rf api/lib",
    "postbuild": "node append-export.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tijmenvangulik/MobileErgometer"
  }
}
